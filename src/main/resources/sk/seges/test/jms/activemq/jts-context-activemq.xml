<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">

	<bean id="embeddedActiveMQBroker" class="org.apache.activemq.xbean.BrokerFactoryBean" lazy-init="true" scope="prototype">
		<property name="config" value="classpath:/sk/seges/test/jms/activemq/embedded-activemq.xml" />
	</bean>
	
	<!-- List of only one embedded ActiveMQ provider manager -->
	<bean id="onlyEmbeddedActiveMQManager" lazy-init="true" class="org.springframework.beans.factory.config.ListFactoryBean">
		<property name="sourceList">
			<list>
				<bean class="sk.seges.test.jms.manager.EmbeddedActiveMQJMSProviderManager">
					<property name="brokerService" ref="embeddedActiveMQBroker" />
					<property name="brokerServiceFactoryName" value="embeddedActiveMQBroker" />
				</bean>
			</list>
		</property>
	</bean>		
</beans>